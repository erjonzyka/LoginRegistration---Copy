@model UserLogin

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <form asp-action="Login" method="post" asp-controller="Home">
        <div class="form-group">
            <label asp-for="LEmail">Email address</label>
            <input asp-for="LEmail" class="form-control" id="exampleFormControlInput1" >
            <span asp-validation-for="LEmail" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="LPassword">Password</label>
            <input asp-for="LPassword" type="password" class="form-control" id="exampleInputPassword1">
            <span asp-validation-for="LPassword" class="text-danger font-italic mb-3"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Login</button>
    </form>
</body>

</html>