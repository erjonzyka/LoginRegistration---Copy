@model UserReg

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
</head>

<body>

    <form  method="post" asp-action="Register" asp-controller="Home">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" id="exampleFormControlInput1">
            <span asp-validation-for="FirstName" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" id="exampleFormControlInput1">
            <span asp-validation-for="LastName" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input asp-for="Email" class="form-control" id="exampleFormControlInput1">
            <span asp-validation-for="Email" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1"
               >
            <span asp-validation-for="Password" class="text-danger font-italic mb-3"></span>
        </div>
        <div class="form-group">
            <label asp-for="Pwconfirm">Confirm Password</label>
            <input asp-for="Pwconfirm" type="password" class="form-control" id="exampleInputPassword1"
                >
            <span asp-validation-for="Pwconfirm" class="text-danger font-italic mb-3"></span>
        </div>
        <button type="submit" class="btn btn-success mt-4">Register</button>
    </form>


</body>

</html>