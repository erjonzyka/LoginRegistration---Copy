@model Wedding
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" action="#">Welcome, @HttpContextAccessor.HttpContext.Session.GetString("UserName") </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home"
                            asp-action="Profile">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="NewWedding" class="nav-link text-dark">Plan a Wedding</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="LogOut" class="nav-link text-dark">Log Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="row">
        <h1>@Model.WedderOne & @Model.WedderTwo's Wedding</h1>
        <h3 class="mt-4">Date: @Model.WeddingDate.ToString("MMM") @Model.WeddingDate.Day, @Model.WeddingDate.Year</h3>
    </div>
    <h3 class="mt-4">Guests: </h3>
    <div class="col-6">
<ul class="list-group">
  @foreach(var item in Model.Associations){
  <li class="list-group-item">@item.Guest.FirstName @item.Guest.LastName</li>
  }
</ul>
    </div>
</body>
</html>